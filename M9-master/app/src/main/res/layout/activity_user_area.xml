<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs2340.team6.totallyratticalapp.UserAreaActivity">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:text="Username"
        app:layout_constraintLeft_toLeftOf="@+id/tvWelcomeMsg"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg" />

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="Welcome!"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/tvUsername"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

</android.support.constraint.ConstraintLayout>
